<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/list_linear_layout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <!--Removed FAB elevation, animator (API 21) -->
        <com.apps.quantum.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"
            android:layout_marginTop="16dp"
            android:background="@drawable/fab_background"
            android:layout_gravity="bottom|right">

            <ImageView
                android:layout_width="@dimen/fab_icon_size"
                android:layout_height="@dimen/fab_icon_size"
                android:src="@drawable/ic_action_new"
                android:tint="@android:color/white"
                android:layout_gravity="center"
                android:duplicateParentState="true"/>

        </com.apps.quantum.FloatingActionButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/footer_clear_done_button"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                style="@style/QuarterButton"
                android:src="@drawable/ic_action_accept" >
            </ImageButton>
            <TextView
                android:id="@+id/mark_as_done"
                style="@style/TitleText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mark as Done"/>
        </LinearLayout>
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/listview_footer"
            style="@style/TitleText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ltGrey"
            android:text="TextTest"/>

        <TextView
            android:id="@+id/completed_today"
            style="@style/TitleText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ltGrey"
            android:text="TextTest"/>

        </LinearLayout>

        <View
            android:id="@+id/kitkat_footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/ltGrey" >
        </View>
    </LinearLayout>



</RelativeLayout>